# ===========================================
# NeuroFlux Production Environment Configuration
# ===========================================
# This file contains production environment variables
# Copy to .env.production and configure your values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=change-this-to-a-secure-random-key-in-production
HOST=127.0.0.1
PORT=5001

# Python Configuration
PYTHONPATH=/opt/neuroflux/src:/opt/neuroflux
PYTHONUNBUFFERED=1

# Database Configuration (Optional - for future use)
# DATABASE_URL=postgresql://neuroflux:password@localhost/neuroflux
# REDIS_URL=redis://localhost:6379

# AI Model APIs - OpenRouter provides access to all major models
# Get your API key from: https://openrouter.ai/keys
OPENAI_API_KEY=your_openrouter_api_key_here
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Alternative AI providers (optional - OpenRouter covers most needs)
# ANTHROPIC_KEY=your_anthropic_key_here
# DEEPSEEK_KEY=your_deepseek_key_here
# GROQ_API_KEY=your_groq_key_here

# Market Data APIs (recommended for enhanced functionality)
# BIRDEYE_API_KEY=your_birdeye_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# Blockchain - Solana (required for Solana trading)
SOLANA_PRIVATE_KEY=your_solana_private_key_here
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Exchange APIs (for live trading - configure as needed)
# Coinbase API Keys (required for public data access)
COINBASE_API_KEY=your_production_coinbase_key
COINBASE_API_SECRET=your_production_coinbase_secret

# Other exchanges
# BINANCE_API_KEY=your_binance_api_key
# BINANCE_API_SECRET=your_binance_api_secret
# HYPER_LIQUID_ETH_PRIVATE_KEY=your_hyperliquid_private_key_here
# X10_API_KEY=your_x10_api_key_here
# X10_PRIVATE_KEY=your_x10_private_key_here
# X10_PUBLIC_KEY=your_x10_public_key_here
# X10_VAULT_ID=your_x10_vault_id_here

# NeuroFlux Core Configuration
FLUX_SENSITIVITY=0.8
ADAPTIVE_LEARNING_RATE=0.1
NEURAL_NETWORK_LAYERS=[64, 32, 16]
SWARM_SIZE=6

# ML Configuration
ML_ENABLED=true
ML_MODEL_CACHE_DIR=/opt/neuroflux/models

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/neuroflux/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Performance Configuration
GUNICORN_WORKERS=8
GUNICORN_THREADS=4
MEMORY_LIMIT=4G
CPU_QUOTA=300%

# Security Configuration
SESSION_TIMEOUT=3600
MAX_REQUEST_SIZE=10MB
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/opt/neuroflux/backups

# System Configuration
TIMEZONE=UTC
LOCALE=en_US.UTF-8